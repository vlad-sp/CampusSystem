@model CampusSystem.Web.ViewModels.Room.RoomInputViewModel
@{
    ViewBag.Title = "Building";
}

<h2>Here you can find a nice place to live!</h2>

@using (Html.BeginForm("BookRoom", "Room", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new student account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Room, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Room, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Room, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
