@model CampusSystem.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="well">
    <h1 class="text-center">Campus System</h1>
    <p class="lead text-center">Here you can find everything about student campus. Book a room, find latest news for your campus.</p>
</div>

@if (TempData["Notification"] != null)
{
    <div class="alert alert-success">
        @TempData["Notification"]
    </div>
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Latest news</h2>
    </div>
    @foreach (var news in Model.News)
    {
        <div class="col-md-8 col-md-offset-2">
            <blockquote class="well">
                <h3>@news.Title</h3>
                <p>@news.Content</p>
                <small>Published: @Html.DisplayFor(x=>news.CreatedOn)</small>
            </blockquote>
        </div>
    }
</div>