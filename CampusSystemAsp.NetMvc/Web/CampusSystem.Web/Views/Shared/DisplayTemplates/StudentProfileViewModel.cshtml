@model CampusSystem.Web.ViewModels.Manage.StudentProfileViewModel
@{
    ViewBag.Title = "Profile page";
}

<h2>@ViewBag.Title</h2>
<br />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Profile of @Model.Email - @Model.FirstName @Model.LastName</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="panel panel-primary" style="height:200px">
                            <div class="panel-heading">
                                <h3 class="panel-title">Personal information</h3>
                            </div>
                            <div class="panel-body">
                                <strong>First name: <em>@Model.FirstName</em></strong><br />
                                <strong>Middle name: <em>@Model.MiddleName</em></strong><br />
                                <strong>Last name: <em>@Model.LastName</em></strong><br />
                                <strong>Email: <em>@Model.Email</em></strong><br />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="panel panel-primary" style="height:200px">
                            <div class="panel-heading">
                                <h3 class="panel-title">University information</h3>
                            </div>
                            <div class="panel-body">
                                <strong>University name: <em>@Model.University</em></strong><br />
                                <strong>Faculty name: <em>@Model.FacultyName</em></strong><br />
                                <strong>Faculty number: <em>@Model.FacultyNumber</em></strong><br />
                                <strong>Course: <em>@Model.Course</em></strong><br />
                                <strong>Group: <em>@Model.GroupNumber</em></strong><br />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="panel panel-primary" style="height:200px">
                            <div class="panel-heading">
                                <h3 class="panel-title">Campus information</h3>
                            </div>
                            <div class="panel-body">
                                <strong>Room: <em>@Model.RoomName</em></strong><br />
                                <strong>Floor: <em>@Model.FloorNumber</em></strong><br />
                                <strong>Campus: <em>@Model.BuildingName</em></strong><br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
