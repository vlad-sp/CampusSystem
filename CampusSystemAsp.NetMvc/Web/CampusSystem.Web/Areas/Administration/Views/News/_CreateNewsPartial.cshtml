@model CampusSystem.Web.Areas.Administration.ViewModels.IndexNewsViewModel
@{
    ViewBag.Title = "CreateNews";
}

@using (Html.BeginForm("CreateNews", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new News.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.InputModel.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.InputModel.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.InputModel.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.InputModel.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.InputModel.Content, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.InputModel.Content, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add" />
            <input type="button" class="btn btn-default" id="cancel" value="Cancel" />
        </div>
    </div>
}

