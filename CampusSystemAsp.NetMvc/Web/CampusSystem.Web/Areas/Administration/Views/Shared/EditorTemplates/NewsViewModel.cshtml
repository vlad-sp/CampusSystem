@model CampusSystem.Web.Areas.Administration.ViewModels.News.NewsViewModel

<a href="" class="btn btn-primary" data-toggle="modal" data-target="@("#editModal" +Model.Id)" data-id="@Model.Id">Edit</a>

<div class="modal fade" id="@("editModal" +Model.Id)" role="dialog" data-id=@Model.Id>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 style="display: inline">Edit news</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="height: 450px">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", value = @Model.Title, data_id = @Model.Id, id = "Title" + @Model.Id })
                @Html.LabelFor(x => x.Content)
                @Html.TextAreaFor(x => x.Content, new { @class = "form-control", value = @Model.Content, id = "Content" + @Model.Id, style="height: 300px" })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-action="save" data-id=@Model.Id>Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
