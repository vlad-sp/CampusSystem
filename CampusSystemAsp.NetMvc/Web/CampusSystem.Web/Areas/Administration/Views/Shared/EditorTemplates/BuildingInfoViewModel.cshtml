@model CampusSystem.Web.Areas.Administration.ViewModels.Building.BuildingInfoViewModel

<button class="btn btn-sm btn-info" data-toggle="modal" data-target="@("#editModal" +Model.Id)" data-id="@Model.Id">Change Host name</button>


<div class="modal fade" id="@("editModal" +Model.Id)" role="dialog" data-id=@Model.Id>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 style="display:inline">Edit Host name</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @Html.LabelFor(x => x.CampusHostName)
                @Html.TextBoxFor(x => x.CampusHostName, new { value = @Model.CampusHostName, data_id = @Model.Id, id = "Name" + @Model.Id, @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CampusHostName, "", new { @class = "text - danger" })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-action="save" data-id=@Model.Id>Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>